@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Black.otf");
    font-weight: normal;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-BlackItalic.otf");
    font-weight: normal;
    font-style: italic;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Bold.otf");
    font-weight: 700;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-BoldItalic.otf");
    font-weight: 700;
    font-style: italic;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Italic.otf");
    font-weight: normal;
    font-style: italic;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Light.otf");
    font-weight: 300;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Regular.otf");
    font-weight: 400;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-Ultra.otf");
    font-weight: 100;
  }
  @font-face {
    font-family: "Soberana Sans";
    src: url("/fonts/SoberanaSans-UltraItalic.otf");
    font-weight: 100;
    font-style: italic;
  }
}

@layer components {
  /*                                 LAYOUTS                              */

  /* HEADER */
  .header {
    @apply relative
    flex
    justify-between
    p-4
    items-center
    lg:py-8 lg:px-8
    xl:px-20;
  }
  .header__menu {
    @apply h-10 lg:hidden block cursor-pointer;
  }

  /* NAV */
  .nav {
    @apply absolute
      top-24
      left-0
      px-4
      py-4
      bg-white
      w-full
      lg:relative lg:top-0 lg:left-0 lg:px-0 lg:py-0 z-10;
  }

  @screen lg {
    .nav {
      width: 90%;
    }
  }
  .nav__list {
    @apply lg:grid lg:grid-cols-6 lg:items-center;
  }
  .nav__item {
    @apply mb-4 lg:mb-0 lg:mx-3 xl:mx-6;
  }
  .nav__link {
    @apply block text-primary-color uppercase text-xs font-medium lg:text-center lg:pb-1 lg:text-xs xl:text-base;
    border-bottom: 2px solid transparent;
  }

  @screen lg {
    .nav__link:hover {
      border-bottom: 2px solid #04f6e8;
    }
  }

  .footer {
    @apply py-6 lg:py-12 text-color-white font-soberana-sans bg-cover bg-center;
    background-image: url("/images/footer-x1.png");
  }

  .footer .container {
    @apply flex flex-col items-center lg:justify-center lg:flex-row lg:justify-between;
  }

  .footer__logo {
    @apply lg:pr-20;
  }

  @screen lg {
    .footer {
      background-image: url("/images/footer-x2.png");
    }

    .footer__logo {
      border-right: 1.5px solid #fff;
    }
  }

  /* .footer__image {
} */

  .footer__slogan {
    @apply text-center text-lg;
  }

  .footer__slogan p {
    @apply uppercase text-2xl;
  }

  .footer__slogan span {
    @apply block normal-case text-sm;
  }

  /* .footer__nav {
}

.footer__list {
}

.footer__item {
} */

  .footer__link {
    @apply flex items-center uppercase text-sm mb-2;
  }

  .footer__link img {
    @apply mr-2;
  }

  .footer__contact {
    @apply text-center;
  }

  .footer__contact p {
    @apply uppercase mb-4;
  }

  .footer__contact div {
    @apply flex justify-between;
  }

  .footer__logo,
  .footer__slogan,
  .footer__nav {
    @apply my-4 lg:my-0;
  }

  @screen lg {
    .footer {
      background-image: url("/images/footer-x2.png");
    }
  }

  .datasketch {
    @apply flex justify-center py-4;
    background-color: #00223e;
  }

  /* .datasketch__logo {
} */

  /* ------------------------------------------------------------------------- */

  /* BANNER */
  .banner {
    overflow: hidden;
  }

  @screen lg {
    .banner {
      @apply bg-top;
    }
  }

  /* BANNER HOME */
  .banner--home {
    @apply relative bg-cover bg-center text-color-white;
    background-image: url("/images/home/banner.png");
    height: 80vh;
  }

  @screen lg {
    .banner--home {
      height: 1000px;
    }
  }

  .banner--home .banner__content {
    @apply w-full px-8 py-10 md:p-12 lg:absolute lg:w-6/12 lg:p-0 xl:inset-y-1/4 xl:w-5/12;
  }

  @screen lg {
    .banner--home .banner__content {
      top: 20%;
    }
  }

  .banner--home .banner__paragraph {
    @apply text-base text-center lg:text-left;
  }

  .banner--home .banner__slogan {
    bottom: 1%;
    @apply absolute w-full p-8 text-center md:bottom-10 lg:w-8/12;
  }

  @screen lg {
    .banner--home .banner__slogan {
      font-size: 18px;
      bottom: 4%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }

  @screen xl {
    .banner--home .banner__slogan {
      font-size: 22px;
      bottom: 0;
    }
  }

  /* BANNER QUIENES SOMOS */

  .banner--quienes-somos {
    @apply relative bg-cover bg-center text-color-white;
    background-image: url("/images/siscrimel/quienes-somos/banner-quienes-somos-mobile.png");
    height: 80vh;
  }

  @screen lg {
    .banner--quienes-somos {
      background-image: url("/images/siscrimel/quienes-somos/banner-quienes-somos-desktop.png");
      height: 100vh;
    }
  }

  .banner--quienes-somos .banner__content {
    @apply w-full px-8 py-10 md:p-12 lg:absolute lg:inset-y-1/4;
  }

  .banner--quienes-somos .banner__slogan {
    @apply absolute bottom-24 text-color-white text-center lg:text-primary-color-dark lg:grid lg:items-center lg:grid-cols-2;
  }

  .banner--quienes-somos h1 {
    @apply text-4xl lg:text-5xl xl:text-6xl;
  }

  .banner--quienes-somos h2 {
    @apply text-color-white text-2xl normal-case mb-4 lg:mb-0 lg:text-primary-color lg:text-left xl:text-3xl;
  }

  .banner--quienes-somos p {
    @apply lg:text-left lg:w-8/12 xl:w-7/12;
  }

  /* SECTION SISCRIMEL HOME */
  .section-siscrimel {
    @apply py-8 xl:pt-20 xl:pb-24;
  }

  .siscrimel {
    @apply grid grid-cols-1 md:gap-y-2 lg:gap-y-0 xl:grid-cols-2 items-center;
  }

  .siscrimel__description {
    @apply bg-cover bg-center py-8 px-4;
    background-image: url("/images/home/siscrimel.svg");
  }

  @screen xl {
    .siscrimel__description {
      padding: 52px 125px 10px 125px;
    }
  }

  .siscrimel__explore-data {
    @apply w-full md:py-8 md:px-4 xl:w-11/12;
  }

  @screen xl {
    .siscrimel__explore-data {
      padding-right: 167px;
      padding-left: 168px;
    }
  }

  .siscrimel__data {
    @apply md:grid grid-cols-2 xl:grid-cols-1;
  }

  .siscrimel__data-image {
    @apply w-full;
  }

  .siscrimel__information {
    @apply px-4 xl:p-0;
  }

  .siscrimel__information h3 {
    @apply text-xl md:text-2xl font-bold;
  }

  .siscrimel__description h2 {
    @apply mb-4;
  }

  .siscrimel__description p {
    @apply my-8 xl:my-8;
  }

  /* SECTION RESULTS */
  .section-results {
    @apply bg-primary-color py-12 md:py-14 xl:py-36;
  }

  .section-results h2 {
    @apply mb-4 text-2xl md:text-3xl lg:text-5xl xl:mb-6 font-bold;
  }

  .section-results p {
    @apply mb-4 xl:mb-6;
  }

  .results {
    @apply text-center lg:w-6/12;
    margin: 0 auto;
  }

  /* SECTION MECHANISM */
  .section-mechanism {
  }

  /* Parent */
  .mechanism {
    @apply grid lg:items-center lg:grid-cols-12;
  }

  /* Childs */
  .mechanism__list {
    @apply py-14 text-center bg-primary-color-dark text-color-white order-2 md:py-20 md:grid md:grid-cols-2 lg:order-1 lg:col-start-1 lg:col-end-7 lg:grid-cols-1 xl:col-start-1 xl:col-end-6  xl:py-28;
  }

  .mechanism__item {
    @apply mb-8;
  }

  .mechanism__item:last-child {
    @apply mb-0;
  }

  .mechanism__item span {
    @apply mr-6;
  }

  .mechanism__content {
    @apply p-6 md:py-16 order-1 bg-cover bg-center lg:order-2 lg:p-0 lg:px-12 lg:col-start-7 lg:col-end-13 xl:px-24 xl:col-start-6 xl:col-end-13;
    background-image: url("/images/home/mechanism.svg");
  }

  .mechanism__content h2 {
    @apply text-3xl sm:text-4xl lg:text-5xl;
  }

  .mechanism__content p {
    @apply my-4 xl:my-6;
  }

  /* SECTION LIBRARY */
  .section-library {
    @apply py-8 lg:py-20 xl:py-24 xl:pb-36;
  }

  .section-library h2 {
    @apply mb-4 text-3xl lg:text-5xl xl:mb-6 font-bold lg:mb-8;
  }

  .library {
    @apply grid gap-y-12 grid-cols-1 lg:gap-x-12 lg:grid-cols-3 lg:items-center;
  }

  .library__item {
    @apply relative flex flex-col justify-center items-center text-center self-stretch p-8;
    border: 2px solid #04f6e8;
  }

  .library__item h3 {
    @apply text-xl lg:text-2xl;
  }

  .library__btn {
    @apply absolute -bottom-5;
  }

  /* SISCRIMEL NAVIGATION */
  .nav-siscrimel {
    @apply hidden bg-primary-color-dark text-center text-color-white uppercase;
    font-weight: 300;
  }

  @screen xl {
    .nav-siscrimel {
      @apply block;
    }
    .nav-siscrimel__list {
      @apply grid grid-cols-5 items-center;
    }

    .nav-siscrimel__item {
    }

    .nav-siscrimel__link {
      @apply block py-4 text-sm;
    }

    .nav-siscrimel__link span {
      font-weight: 800;
    }

    .nav-siscrimel__link:hover {
      @apply hover:bg-primary-color;
    }
  }

  /* SECTION CRIMES */
  .section-crimes {
    @apply bg-cover bg-center py-8 md:py-12 lg:py-14 xl:py-16;
    background-image: url("/images/siscrimel/quienes-somos/delitos-irregularidades.jpg");
  }

  .crimes {
    @apply grid grid-cols-1 gap-y-4 lg:grid-cols-2 lg:gap-y-0;
  }

  .crimes__item {
    @apply lg:p-8 xl:p-12;
  }

  .crimes__item h3 {
    @apply text-xl md:text-2xl lg:text-3xl xl:text-4xl;
  }

  .crimes__item p {
    @apply mb-6;
  }

  /* SECTION EXPLORE */
  .section-explore {
    @apply py-8 md:py-12 lg:py-14 xl:py-24;
  }

  .explore {
    @apply grid gap-y-6 items-center grid-cols-1 lg:grid-cols-2 lg:gap-y-0;
  }

  .explore__datas {
    @apply relative text-center lg:text-left;
  }

  @screen xl {
    .explore__datas h2 {
      font-size: 40px !important;
    }
  }

  .explore__list {
    @apply my-4 text-primary-color xl:my-0 xl:w-10/12;
  }

  .explore__item {
    @apply mb-4 lg:mb-6 xl:text-xl;
  }

  .explore__imagen {
    @apply w-full;
  }

  .explore__icon {
    @apply hidden absolute lg:inset-1/2 xl:-top-8 xl:-left-8 lg:block;
  }

  @screen lg {
    .explore__icon {
      transform: translate(-50%, -50%);
    }
  }

  @screen xl {
    .explore__icon {
      transform: translate(0, 0);
    }
  }

  /* SECTION VARIABLES */
  .section-variables {
    @apply bg-center bg-cover py-4 md:py-6 lg:py-8 xl:py-12;
    background-image: url("/images/siscrimel/quienes-somos/banner-variables-phone.png");
  }

  @screen lg {
    .section-variables {
      background-image: url("/images/siscrimel/quienes-somos/banner-variables-desktop.png");
    }
  }

  .section-variables h3 {
    @apply mb-6 text-2xl md:mb-8 xl:text-3xl xl:mb-12;
  }

  .variables__row {
    @apply mb-4 flex flex-wrap justify-center md:mb-5;
  }

  .variables__link {
    font-size: 10px;
    border: 1px solid #fff;
    @apply mx-1 mb-2 text-color-white uppercase font-light p-1 md:text-sm md:p-3 lg:mx-4 xl:px-6 xl:mx-4;
  }

  /* SECTION REPORTS */
  .section-reports {
    @apply py-6 md:py-8 lg:py-12 xl:py-20;
  }

  .section-reports h2 {
    @apply text-3xl md:text-4xl xl:text-5xl xl:mb-4;
  }

  .section-reports p {
    @apply text-base md:text-xl lg:text-2xl;
  }

  .reports {
    @apply grid mb-6 grid-cols-1 gap-y-8  md:mb-8 lg:grid-cols-2 lg:mb-12 xl:grid-cols-3 text-primary-color lg:gap-x-8 xl:gap-x-10 xl:mb-20;
  }

  .reports__item {
    @apply bg-color-white py-10 pl-12 pr-8 shadow rounded-xl;
    box-shadow: -1px 4px 11px -4px rgba(10, 74, 131, 0.75);
  }

  .reports__title {
    @apply text-xl xl:text-2xl font-bold mb-2;
  }

  .reports__organizator {
    @apply italic mb-2 lg:mb-4 xl:mb-6 italic uppercase;
    font-size: 14px !important;
  }

  .reports__description {
    @apply mb-2 xl:mb-4;
    font-size: 16px !important;
    line-height: 1.3 !important;
  }

  .reports__date {
    @apply italic mb-3 lg:mb-4 xl:mb-6;
    font-size: 14px !important;
  }

  .reports__date span {
    @apply font-bold;
  }
}

@layer utilities {
  .container {
    max-width: 1200px !important;
    width: 95% !important;
    margin: 0 auto !important;
  }

  /*   TYPOGRAPHY   */

  .heading-primary {
    @apply mb-4 text-3xl text-center uppercase font-bold leading-tight md:mb-8 lg:mb-3 lg:text-5xl lg:text-left xl:text-6xl;
  }

  .heading-primary span {
    @apply block text-base lg:text-xl;
  }

  .heading-secondary {
    @apply text-4xl sm:text-5xl font-bold xl:mb-6;
  }

  .heading-secondary span {
    @apply block normal-case font-normal text-2xl sm:text-3xl;
  }

  .heading-secondary--uppercase {
    @apply uppercase;
  }

  .heading-secondary--font-normal {
    @apply text-3xl md:text-4xl xl:text-5xl;
  }

  .heading-secondary--blue {
    @apply text-primary-color-dark;
  }

  .heading-secondary--white {
    @apply text-color-white;
  }

  .heading-tertiary {
    @apply text-primary-color-dark font-bold my-4;
  }

  .heading-tertiary--white {
    @apply text-color-white;
  }

  .paragraph {
    @apply text-base;
  }

  .paragraph--black {
    @apply text-color-body;
  }

  .paragraph--white {
    @apply text-color-white;
  }

  .paragraph--blue {
    @apply text-primary-color-dark;
  }

  /* BUTTONS */
  .btn {
    @apply inline-block py-2 px-8 uppercase text-xs lg:text-sm  font-bold;
  }

  .btn--primary {
    @apply bg-primary-color-dark text-color-white;
  }

  .btn--secondary {
    @apply bg-color-white text-primary-color;
  }

  .btn--tertiary {
    @apply bg-color-orange text-color-white;
  }
}
